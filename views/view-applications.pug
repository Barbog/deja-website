extends layout.pug

block body
  - const isIndex = Array.isArray(pages)
  if user && user.admin
    section
      != markdown || ''
    section.bgless.center
      if isIndex
        a(href='/x-admin/download-applications/' + year)= __('Download snapshot')
      else
        a(href='..')= __('Go back')
    if pages
      each page, pageName in pages
        if isIndex
          section.bgless
            a(href=altLocales[getLocale()] + '/' + __(page).toLowerCase().split(' ').join('-').split('/').join('-').split('(').join('').split(')').join('').split('!').join(''))
              h1= __(page)
        else
          section.bgless
            h1= __(pageName)
            table.datatable
              thead
                - let header = page.shift()
                tr
                  each col in header
                    th= __(col)
              tbody
                each entry in page
                  tr
                    each col in entry
                      td= col
