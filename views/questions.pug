  section
    h1.center= title
    if markdown
      != markdown
    // TODO QUESTION AWAY
    if nextpage
      a.nextpage(href=[ '', getLocale() ].concat(stackpages.slice(0, stackpages.length - 1)).concat([ __(nextpage).split('/').join('-') ]).join('/').toLowerCase().split(' ').join('-'))= __('Next Page')
