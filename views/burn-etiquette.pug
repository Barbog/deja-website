extends layout.pug

block body
  section.fancy
    h1.center.fancy= title
    if markdown
      != markdown
      if nextpage
        a(href=[ '', getLocale() ].concat(stackpages).concat([ __(subpage.title) ]).join('/').toLowerCase().split(' ').join('-'))= nextpage
    ul
      each subpage in subpages
        li.grid
          a(class=(subpage.acl && (!user || !user[subpage.acl]) ? 'disabled' : '') href=[ '', getLocale() ].concat(stackpages).concat([ __(subpage.title) ]).join('/').toLowerCase().split(' ').join('-'))
            p.fancy= __(subpage.title)
