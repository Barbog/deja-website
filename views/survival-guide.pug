extends layout.pug

block body
  section
    h1.center= title
    if markdown
      != markdown
    if nextpage
      a(href=[ '', getLocale() ].concat(stackpages.splice(0, stackpages.length - 1)).concat([ __(nextpage).split('/').join('-') ]).join('/').toLowerCase().split(' ').join('-'))= nextpage
    ul.grid-logo
      each subpage in subpages
        li.grid
          a(class=(subpage.acl && (!user || !user[subpage.acl]) ? 'disabled' : '') href=[ '', getLocale() ].concat(stackpages).concat([ __(subpage.title).split('/').join('-') ]).join('/').toLowerCase().split(' ').join('-'))
            p= __(subpage.title)
